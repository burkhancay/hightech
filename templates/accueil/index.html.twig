{% extends 'base.html.twig' %}

{% block title %}Accueil{% endblock %}

{% block body %}

<div class="container">
    <h1 class="my-5 text-center">Tous nos pc portables</h1>
    <div class="row">
        {% for article in articles %}
       <div class="col-md-4 mt-4">
            <div class="card profile-card-5">
                <div class="card-img-block">
                    <img class="card-img-top" src="/uploads/images/featured/{{ article.featured_image }}" alt="titre pc">
                </div>
                <div class="card-body">
                    <h3 class="card-title">
                       <a href="{{ path('article', {"slug": article.slug}) }}">{{ article.titre }}</a>
                    </h3>
                    <h5 class="card-title">
                        {% for categorie in article.categories %}
                            {{ categorie.nom }}
                        {% endfor %}
                    </h5>
                    <p class="card-text">{{ article.contenu|raw }}</p>
                    <div class="pclinks">
                        <a href="#" target="_blank" class="btn btn-success">Acheter</a>
                    </div>
                </div>
            </div>
       </div>
    {% endfor %}   
    </div>
</div>

{% endblock %}
